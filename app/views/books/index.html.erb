
<div class="index">
<h2>Books</h2>

<div class="index-list">
<table>
      <tr>
        <th>Title</th>
        <th>Body</th>
     </tr>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td>
        <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>

  <h3>New book</h3>
  <div class="index-new">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->
<%= form_with model: Book.new do |book| %>
  <h6>Title</h6>
  <%= book.text_field :title %>
  <h6>Body</h6>
  <%= book.text_area :body %>
  <br>
  <%= book.submit 'Create Book' %>

<% end %>
</div>
</div>