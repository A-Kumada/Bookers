
<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="edit">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="edit-text">
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |book| %>
<p>Title</p>
<%= book.text_field :title %>
<p>Body</p>
<%= book.text_area :body %>
<br>
<%= book.submit 'Update Book' %>

<p>
  <%= link_to "show", book_path(@book.id) %> |
  <%= link_to "back", "/books" %>
</p>
</div>
</div>
<% end %>
